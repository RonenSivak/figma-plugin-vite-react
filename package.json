{
  "name": "figma-plugin-vite-react",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "start": "run-s dev",
    "dev": "run-s watch",
    "dev:ui-only": "vite -c ./vite.config.ui.ts",
    "watch": "run-p \"watch:*\"",
    "watch:ui": "yarn build:ui --watch --mode=development",
    "watch:plugin": "yarn build:plugin --watch --mode=development",
    "build": "npm-run-all build:ui build:plugin",
    "build:ui": "vite build -c ./vite.config.ui.ts",
    "build:plugin": "vite build -c ./vite.config.plugin.ts",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "@wix/design-system": "^1.204.0",
    "monorepo-networker": "^2.1.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@figma/plugin-typings": "^1.83.0",
    "@types/node": "^18.15.11",
    "@types/postcss-url": "^10.0.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitejs/plugin-react-swc": "^3.10.2",
    "eslint": "^9.29.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.2.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.21",
    "postcss-url": "^10.1.3",
    "rimraf": "^5.0.5",
    "sass": "^1.60.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.34.1",
    "vite": "^7.0.0",
    "vite-plugin-generate-file": "^0.1.1",
    "vite-plugin-singlefile": "^2.0.3"
  }
}

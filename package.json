{
  "name": "figma-plugin-vite-react",
  "private": true,
  "version": "0.0.3",
  "type": "module",
  "packageManager": "yarn@4.9.2",
  "scripts": {
    "start": "run-s dev",
    "dev": "run-s watch",
    "dev:ui-only": "vite -c ./vite.config.ui.ts",
    "watch": "run-p \"watch:*\"",
    "watch:ui": "yarn build:ui --watch --mode=development",
    "watch:plugin": "yarn build:plugin --watch --mode=development",
    "build": "npm-run-all build:ui build:plugin",
    "build:ui": "vite build -c ./vite.config.ui.ts",
    "build:plugin": "vite build -c ./vite.config.plugin.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "e2e:codegen": "playwright codegen http://localhost:5173",
    "publish:figma": "node scripts/publish-figma-plugin.js",
    "publish:figma:patch": "node scripts/publish-figma-plugin.js --bump patch",
    "publish:figma:minor": "node scripts/publish-figma-plugin.js --bump minor",
    "publish:figma:major": "node scripts/publish-figma-plugin.js --bump major",
    "publish:figma:dry-run": "node scripts/publish-figma-plugin.js --dry-run"
  },
  "dependencies": {
    "@sentry/react": "^9.36.0",
    "@sentry/tracing": "^7.120.3",
    "@wix/design-system": "^1.204.0",
    "monorepo-networker": "^2.1.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@figma/plugin-typings": "^1.83.0",
    "@playwright/test": "^1.53.2",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^18.15.11",
    "@types/postcss-url": "^10.0.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitejs/plugin-react-swc": "^3.10.2",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.29.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "figcd": "^0.0.16",
    "form-data": "^4.0.3",
    "globals": "^16.2.0",
    "happy-dom": "^18.0.1",
    "jsdom": "^26.1.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.21",
    "postcss-url": "^10.1.3",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.5",
    "sass": "^1.60.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.34.1",
    "vite": "^7.0.0",
    "vite-plugin-generate-file": "^0.1.1",
    "vite-plugin-singlefile": "^2.0.3",
    "vitest": "^3.2.4"
  }
}
